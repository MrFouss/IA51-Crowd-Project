package fr.utbm.info.ia51.crowdproject.^agent

import io.sarl.core.Initialize
import io.sarl.core.Logging
import io.sarl.core.Destroy
import io.sarl.core.DefaultContextInteractions
import org.dyn4j.geometry.Vector2

/**
 * The hamster agent
 */
agent Hamster extends Animat {
	
	uses Logging, DefaultContextInteractions, EnvironmentMotion
	
	on Initialize {
		info("New hamster spawned.")

		setSkill(new DefaultEnvironmentMotion, typeof(EnvironmentMotion))
	}

	on Destroy {
		info("A hamster has been killed")
	}
	
	on Perception {
		// Compute the perception and decide what to do
		var vector = new Vector2(0, 0) // TODO
		
		emit(new Action(vector, occurrence.time))
			[it == occurrence.source]
	}
}
